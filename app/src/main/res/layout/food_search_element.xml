<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="70dp"
    android:id="@+id/containerRecipe"
    android:layout_gravity="center_horizontal"
    >
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_rowSpan="3"
        android:layout_columnSpan="3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextProduct">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagen_producto"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:src="@drawable/logo_with_background" />

        <TextView
            android:id="@+id/nombre_producto"
            style="@style/TextStyleText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/mÃ¡s_ampliar"
            style="@style/TextStyleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/simbolo_mas"
            android:textAlignment="center"
            android:textSize="25sp" />

    </GridLayout>



</androidx.cardview.widget.CardView>